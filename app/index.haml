%html{ lang: 'en' }
  %head
    %meta{ charset: 'UTF-8' }
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }
    %meta{ name: 'theme-color', content: '#fff' }
    %title Keppler | CMS
    %link{ rel: 'shortcut icon', href: 'assets/img/favicon.png' }
    %link{ rel: 'stylesheet', href: 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css' }
    %link{ rel: 'stylesheet', href: 'https://use.fontawesome.com/releases/v5.1.0/css/all.css' }
    %link{ rel: 'stylesheet', href: 'assets/css/slick-theme.css' }
    %link{ rel: 'stylesheet', href: 'assets/css/slick.css' }
    %link{ rel: 'stylesheet', href: 'assets/css/main.css' }
  %body

    %a.return-to-top{ href: 'javascript:', id: 'return-to-top' }
      %i.fa.fa-chevron-up

    = Haml::Engine.new(File.read('app/partials/_header.haml')).render
    = Haml::Engine.new(File.read('app/partials/_features.haml')).render
    = Haml::Engine.new(File.read('app/partials/_product.haml')).render
    = Haml::Engine.new(File.read('app/partials/_about.haml')).render
    = Haml::Engine.new(File.read('app/partials/_footer.haml')).render

    %script{ src: 'https://code.jquery.com/jquery-3.3.1.min.js' }
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js' }
    %script{ src: 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js' }
    %script{ src: 'https://www.google.com/recaptcha/api.js' }
    %script{ src: 'assets/js/slick.min.js' }
